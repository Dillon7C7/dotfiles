# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "disk /"
order += "disk /home/"
order += "wireless _first_"
#order += "ipv6"
#order += "ethernet _first_"
#order += "battery all"
##order += "CPU-Temperature"
order += "load"
order += "tztime local"

wireless _first_ {
        format_up = "%quality at %essid | %ip"
        format_down = "down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage %remaining"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

#CPU-Temperature {
#		order = "cpu_temperature 0"
#		format = "T: %degrees C"
#}

load {
        format = "%1min"
}

disk "/" {
		# IEC prefixes (MiB, GiB) multiples of 1024
		prefix_type = "binary"
		
		#format = "/ %avail"
        	format = "/ %percentage_used"
        #format = "Size: %total Used: %free, Avail: %avail"
        #format = "%percentage_avail"

		low_threshold = "25"
		threshold_type = "gbytes_avail"
		format_below_threshold = "/ ALMOST FULL: %avail / %total"
}

disk "/home/" {
		# IEC prefixes (MiB, GiB) multiples of 1024
		prefix_type = "binary"
		
		#format = "/home %avail"
        #format = "Size: %total Used: %free, Avail: %avail"
        	format = "/home %percentage_used"

		low_threshold = "35"
		threshold_type = "gbytes_avail"
		format_below_threshold = "/home ALMOST FULL: %avail /home %total"
}
