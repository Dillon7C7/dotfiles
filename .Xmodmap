! clear all entries in the modifier map for Lock and Mod4
clear Lock
clear Mod4

! remove Alt_R from Mod1 modifier map
remove Mod1 = Alt_R

! remove Unused Mode_switch from Mod5
remove Mod5 = Mode_switch

! swap Super_L and Caps_Lock, and add Menu key (keycode 133) to Caps_Lock
keycode 133 = Caps_Lock
keycode 135 = Caps_Lock
keycode 66 = Super_L

add Lock = Caps_Lock Menu
add Mod4 =  Super_L

